<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.wrapper">
            <container name="category.hero" htmlTag="div" htmlClass="category-hero-container" before="main.content"/>
        </referenceContainer>
        <move element="page.main.title" destination="category.view.container" />
        <move element="category.description" destination="category.view.container" after="-"/>
        <move element="category.view.container" destination="category.hero" after="-"/>
        <move element="category.image" destination="category.hero" before="-"/>
    </body>
</page>
